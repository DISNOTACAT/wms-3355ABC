<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc3355.abc_wms_system.searchProduct.model.dao.NameMapper">

    <resultMap id="searchByNameResultMap" type="com.abc3355.abc_wms_system.searchProduct.model.dto.SearchProductDTO">
        <id property="productNo" column="PRODUCT_NO"/>
        <result property="productName" column="PRODUCT_NAME"/>
        <result property="productPrice" column="PRODUCT_PRICE"/>
        <result property="isExpire" column="IS_EXPIRE"/>
    </resultMap>

    <select id="searchByName" resultMap="searchByNameResultMap">
        SELECT A.PRODUCT_NO
                , A.PRODUCT_NAME
                , A.PRODUCT_PRICE
                , A.IS_EXPIRE
        FROM product A
        WHERE A.PRODUCT_NAME LIKE CONCAT('%',#{name},'%')
    </select>
</mapper>